<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d_16"
        android:orientation="vertical">

        <TextView
            style="@style/text_16_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d_16"
            android:text="This option takes to Landing screen. Do you want to test Again? If yes, Please restart the Sensor unit" />

        <LinearLayout
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_16">


            <Button
                android:id="@+id/bCancel"
                style="@style/button_14_primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/action_cancel"
                android:visibility="gone" />

            <View
                android:layout_width="@dimen/d_4"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/bDailogTestAgain"
                style="@style/button_14_primary"
                android:layout_width="223dp"
                android:layout_height="49dp"
                android:text="Test Again" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>